<div id="main">
    <div id="archive-body">

        <div class="archive_panel">
            <div class="archive_head">
                <img src="<%- theme.head_img %>" alt="头像未显示成功" class="archive_img">
            </div>
            <div class="archive_info">
                <span class="archive_name">
                    <%- config.author %>
                    <svg viewBox="0 0 24 24" class="archive_verified"><g><path d="M22.25 12c0-1.43-.88-2.67-2.19-3.34.46-1.39.2-2.9-.81-3.91s-2.52-1.27-3.91-.81c-.66-1.31-1.91-2.19-3.34-2.19s-2.67.88-3.33 2.19c-1.4-.46-2.91-.2-3.92.81s-1.26 2.52-.8 3.91c-1.31.67-2.2 1.91-2.2 3.34s.89 2.67 2.2 3.34c-.46 1.39-.21 2.9.8 3.91s2.52 1.26 3.91.81c.67 1.31 1.91 2.19 3.34 2.19s2.68-.88 3.34-2.19c1.39.45 2.9.2 3.91-.81s1.27-2.52.81-3.91c1.31-.67 2.19-1.91 2.19-3.34zm-11.71 4.2L6.8 12.46l1.41-1.42 2.26 2.26 4.8-5.23 1.47 1.36-6.2 6.77z"></path></g></svg>
                </span>
                <div class="archive_desp">
                    <%- config.description %>
                </div>
            </div>

        </div>
        <%
        var year = 0;
        page.posts.forEach(function(post){
            var temp = date(post.date, "YYYY");
        if (temp !== year || year === 0) {
            year = temp;
        %>
        <a href="/<%- config.archive_dir %>/<%- year %>">
            <h2><%- year %></h2>
        </a>
        <% } %>

        <div class="archive_list_item">
            <div class="archive_list_item_content">
                <a href="/<%- post.path %>" title="<%- post.title %>" aria-label="<%- post.title %>">
                    <h3 class="archive-card_title">
                        <%- post.title %>
                    </h3>
                    <div class="archive-card_date">
                        <%- date(post.date, "YYYY-MM-DD") %>
                    </div>
                </a>
            </div>

        </div>
        <% }); %>

        <% if (page.posts >= config.per_page){ %>
            <div id="page">
                <div class="page-inner">
                    <%- paginator({
                        prev_text: '<span class="fa fa-angle-left"> < </span>',
                        next_text: '<span class="fa fa-angle-right"> > </span>',
                        escape: false
                    }) %>
                </div>
            </div>
        <% } %>
    </div>

</div>