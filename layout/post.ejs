<div id="main">
    <% if (is_post() && trim(toc(page.content)) !== "") { %>
        <div class="book-index">
            <div id="bookmark">
                <a href="javascript:void(0)" onclick="bookmark()">
                    <img src="/img/bookmark.svg" alt="bookmark" style="width: 2em;height: 2em;" class="bookmarkImg">
                </a>
            </div>
            <div id="post_toc" class="post_toc--hidden">
                <%- toc(page.content); %>
            </div>
        </div>
    <% } %>
    <div class="content">
        <div class="content_bg">
            <div class="post_name">
                <h1 id="<%- page.title %>">
                    <%- page.title %>
                </h1>
            </div>
            <% if (!page.hidden_author) { %>
                <%- partial('author') %>
            <% } %>
            <div class="article">
                <%- page.content %>
            </div>
        </div>
        <% if (page.show_update){ %>
            <div class="post_update">
                最后编辑于<%- date(page.updated, "YYYY年MM月DD日") %>
            </div>
        <% } %>
        <% if(page.comments !== false) { %>
            <div id="waline"></div>
        <% } %>
        <%- partial('postnext') %>
    </div>
    <script src="/js/post.js"></script>
</div>